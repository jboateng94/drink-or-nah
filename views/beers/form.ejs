

<form action="/<%= beer.id %>" method="POST">
	<div class="form">
		<div class="form-group row">
		  <label for="name" class="col-2 col-form-label">Name</label>
		  <div class="col-10">
		    <input type="text" name="name" placeholder="Enter a name" value="<%= beer.name %>" required>
		  </div>
		</div>

		<div class="form-group row">
		  <label for="tagline" class="col-2 col-form-label">Tagline</label>
		  <div class="col-10">
		    <input type="text" name="tagline" placeholder="Enter a tagline (if you'd like)" value="<%= beer.tagline %>">
		  </div>
		</div>

		<div class="form-group row">
		  <label for="example-number-input" class="col-2 col-form-label">Number</label>
		  <div class="col-10">
		    <input type="number" step="0.01" name="abv" value="<%= beer.abv %>" min="0" max="100" required>
		  </div>
		</div>

		<div class="form-group row">
		  <label for="description" class="col-2 col-form-label">Description</label>
		  <div class="col-10">
		    <textarea name="description" class="form-control" id="description" rows="3" required><%= beer.description %></textarea>
		  </div>
		</div>

		<div class="form-group row">
		  <label for="name" class="col-2 col-form-label">Name</label>
		  <div class="col-10">
		    <input type="text" name="image_url" placeholder="Enter a URL for an for the beer" value="<%= beer.image_url %>">
		  </div>
		</div>

		<input type="submit" value="Save beer entry">
		<% if(beer.id != "") { %>
			<input type="hidden" name="_method" value="PUT">
		<% } %>
	</div>
</form>





