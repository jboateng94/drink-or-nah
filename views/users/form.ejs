<form action="/users" method="POST">

    <div class="form-group row">
	  <label for="first_name" class="col-2 col-form-label">First Name</label>
	  <div class="col-10">
	    <input type="text" name="first_name" placeholder="Enter you first name" value="<%= user.firstname %>" required>
	  </div>
	</div>

	<div class="form-group row">
	  <label for="last_name" class="col-2 col-form-label">Last Name</label>
	  <div class="col-10">
	    <input type="text" name="last_name" placeholder="Enter you last name" value="<%= user.lastname %>" required>
	  </div>
	</div>

	<div class="form-group row">
	  <label for="email" class="col-2 col-form-label">Email</label>
	  <div class="col-10">
	    <input type="email" name="email" placeholder="Enter you email" value="<%= user.email %>" required>
	  </div>
	</div>

	<div class="form-group row">
	  <label for="password" class="col-2 col-form-label">Password</label>
	  <div class="col-10">
	    <input type="password" name="password" placeholder="Enter you password" value="<%= user.password %>" required>
	  </div>
	</div>

    <input type="submit" value="Save User">
    
</form>